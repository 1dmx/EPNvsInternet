<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>EPNvsInternet</title>
	<link rel="stylesheet" type="text/css" href="/app.css" />
</head>
<body class="control">
	<header>
		<h1>Control #EPNvsInternet</h1>
	</header>

	<div id="van" class="seccion">
		<h1>Tuits: <span id="count">0</span></h1>
		<button id="go-counter">Cambiar a contador</button>
	</div>
	<div id="resaltado" class="seccion">
		<h1>Tuit Resaltado: </h1>
		<p id="resaltado-text"></p>
		<button id="go-resalte">Cambiar a resalte</button>
	</div>

	<div id="container" class="seccion">
		<button id="go-normal">Cambiar a Stream</button>
		<script type="text/html" id="tpl-tweet">
			<div class="tweet nuevo">
				<img src="{{user.pic}}" />
				<h2>{{user.name}}</h2>
				<p>{{{text}}}</p>
				{{#media}}
				<img class="media" src="{{media}}" />
				{{/media}}
			</div>
		</script>
		<section id="stream">
		</section>
	</div>

	<script src="/jquery.js"></script>
	<script src="/mustache.js"></script>
	<script src="/socket.io/socket.io.js"></script>
	<script src="/control.js"></script>
</body>
</html>

